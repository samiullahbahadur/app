<table class="table table-striped table-hover">
<thead style="background-color: #e3f2fd;">
<tr>
  <th>Title</th>
  <th>Description</th>  
  
  <th ></th>
  <% if @current_user&& (@current_user===@user || @current_user.admin?) %>
  <th collapse="3">Actions</th>
 
  <th ></th>
  <% end %>
  </tr>
</thead>
<tbody>
<% @articles.each do |art| %>
 <tr>
 <td>
 <%= art.title %>
 </td>
 <td>
 <%= art.description %>
 </td>

 <td>
 <%= link_to "Show ", article_path(art), class:'nav-link btn btn-outline-info' %>
 </td>
 <% if @current_user&& (@current_user===art.user || @current_user.admin?) %>
 <td>
 <%= link_to "Edit ",  edit_article_path(art), class:'nav-link btn btn-outline-success' %>
 </td>
 <td>  
 <%= link_to 'Delete', article_path(art), method: :delete, data: {confirm: "Are you sure?"}, class:'nav-link btn btn-outline-danger' %>
 </td>
 <% end %>
 </tr>
 <% end %>
</tbody>
</table>